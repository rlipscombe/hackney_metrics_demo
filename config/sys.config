[
    {hackney, [{mod_metrics, prometheus_hackney}]},

    {kernel, [
        {logger_level, debug},
        {logger, [
            {handler, default, logger_std_h, #{
                formatter =>
                    {logger_color_formatter, #{
                        template => [
                            time, " ",
                            color,
                            "[", level, "]",
                            {pid, [" ", pid, ""], ""},
                            {mfa, [" ", mfa, ":", line], ""},
                            ": ",
                            msg,
                            eol
                        ],
                        legacy_header => false,
                        single_line => true
                    }}
            }}
        ]}
    ]}
].
